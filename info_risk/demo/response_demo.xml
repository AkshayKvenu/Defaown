        <record id="risk_threat_2" model="info.risk.threat">
            <field name="name">Improper / Inadequate Procedure</field>
        </record>
        
        <record id="risk_threat_3" model="info.risk.threat">
            <field name="name">Improper Operation</field>
        </record>
        
        <record id="risk_threat_4" model="info.risk.threat">
            <field name="name">Improper Hardware Configuration</field>
