<odoo>
  <data>
  <record model="ir.ui.view" id="view_infoknowledge_knowledge_form">
			<field name="name">info.knowledge.knowledge.form</field>
			<field name="model">info.knowledge.knowledge</field>
			<field name="arch" type="xml">
				<form string="Info Knowledge">
					<header>
						<button name="set_draft" string="Set to draft"
							type="object" class="oe_highlight"
							attrs="{'invisible': [('state','=','draft')]}" />
								<field name="state"  widget='statusbar'/>
					</header>
					<sheet>
                    <div class="oe_title" attrs="{'invisible': [('number', '=', 'false')]}">
<!--                         <label for="info_asset_name_seq"  class="oe_edit_only"/> -->
                        <h1>
                            <field name="number" readonly='1'/>
                        </h1>
                    </div>
						<group>
							<group>
<!-- 								<field name="knowledge_base" required='1'/> -->
<!--                                         <label for="lang" /> -->
<!--                                         <div class="o_row"> -->
<!--                                             <field name="lang"/> -->
<!--                                             <button -->
<!--                                                 type="action" -->
<!--                                                 name="%(base.res_lang_act_window)d" -->
<!--                                                 class="btn-sm btn-link mb4 fa fa-globe" -->
<!--                                                 aria-label="More languages" -->
<!--                                                 title="More languages"/> -->
<!--                                         </div> -->
								<field name="language_id"/>
							</group>
							<group>
								<field name="published" required='1'/>
								<field name="valid_to" required='1' />
							</group>
							<group>
								<field name="short_desc"/>
								<field name="parent_id"/>
							</group>
							<group>
								<field name="link"/>
								<field name="workflow" readonly='1'/>
<!-- 								<field name="disp"/> -->
							</group>
							</group>
							<group>
								<field name="article" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_infoknowledge_knowledge_tree">
			<field name="name">info.knowledge.knowledge.tree</field>
			<field name="model">info.knowledge.knowledge</field>
			<field name="arch" type="xml">
				<tree string="Info Knowledge">
					<field name="number" />
					<field name="published" />
					<field name="valid_to" />
				</tree>
			</field>
		</record>


		<record model="ir.actions.act_window"
			id="action_infoknowledge_knowledge">
			<field name="name">Info Knowledge</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">info.knowledge.knowledge</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Nothing to show
				</p>
			</field>
		</record>
		
		
  <record model="ir.ui.view" id="view_infoknowledge_base_form">
			<field name="name">info.knowledge.base.form</field>
			<field name="model">info.knowledge.base</field>
			<field name="arch" type="xml">
				<form string="Info Knowledge">
					<sheet>
				<group>
                    <div class="oe_title">	
<!--                         <h1> -->
<!--                             <field name="number" readonly='1'/> -->
<!--                         </h1> -->
	            	<field name="icon_image" widget="image" class="oe_left oe_avatar"/>
                       
                        <h1><field name="title" placeholder="Title"/></h1>
                    </div>
                </group>
<!--                     <div class="oe_title" attrs="{'invisible': [('number', '=', 'false')]}"> -->
<!--                         <label for="info_asset_name_seq"  class="oe_edit_only"/> -->
<!--                         <h1> -->
<!--                             <field name="number" readonly='1'/> -->
<!--                         </h1> -->
<!--                     </div> -->
						<group>
							<group>
<!-- 								<field name="title" required='1'/> -->
								<field name="valid_art" required='1' />
							</group>
<!-- 							<group> -->
<!-- 	            				<field name="icon_image" widget="image" class="oe_left oe_avatar"/> -->
<!-- 							</group> -->
<!-- 							<group> -->
<!-- 								<field name="owner" /> -->
<!-- 								<field name="manager"/> -->
<!-- 							</group> -->
							<group>
								<field name="publish_workflow"/>
								<field name="retir_flow"/>
							</group>
							<group>
								<field name="is_active"/>
								<field name="related_cmdb_ids" widget="many2many_tags"/>
								<field name="desc"/>   
							</group>
							<group>
								<field name="knowledge_ids" widget="many2many_tags"/>
								<field name="category_ids" widget="many2many_tags"/>
							</group>
							<group>
								<field name="q_a" />
							</group>
							<group>
								<field name="set_default" />
							</group>
							<group>
								<field name="read_group_ids"  widget="many2many_tags"/>
							</group>
							<group>
								<field name="contibute_groups_ids"  widget="many2many_tags"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_infoknowledge_base_tree">
			<field name="name">info.knowledge.base.tree</field>
			<field name="model">info.knowledge.base</field>
			<field name="arch" type="xml">
				<tree string="Info Knowledge Base">
					<field name="number" />
					<field name="title" />
					<field name="valid_art" />
				</tree>
			</field>
		</record>


		<record model="ir.actions.act_window"
			id="action_infoknowledge_base">
			<field name="name">Info Knowledge Base</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">info.knowledge.base</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Nothing to show
				</p>
			</field>
		</record>
		
		
  <record model="ir.ui.view" id="view_infoknowledge_category_form">
			<field name="name">info.knowledge.category.form</field>
			<field name="model">info.knowledge.category</field>
			<field name="arch" type="xml">
				<form string="Info Knowledge Category">
					<sheet>
						<group>
							<group>
								<field name="name" required='1'/>
								<field name="desc" required='1' />
							</group>
							<group>
								<field name="patent_id" domain="[('id','!=',id)]"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_infoknowledge_category_tree">
			<field name="name">info.knowledge.category.tree</field>
			<field name="model">info.knowledge.category</field>
			<field name="arch" type="xml">
				<tree string="Info Knowledge Category">
					<field name="name" />
					<field name="desc" />
				</tree>
			</field>
		</record>


		<record model="ir.actions.act_window"
			id="action_infoknowledge_category">
			<field name="name">Info Knowledge Category</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">info.knowledge.category</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Nothing to show
				</p>
			</field>
		</record>
		
		
  </data>
</odoo>