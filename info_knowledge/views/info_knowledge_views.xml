  <record model="ir.ui.view" id="view_infoknowledge_base_form">
			<field name="name">info.knowledge.base.form</field>
			<field name="model">info.knowledge.base</field>
			<field name="arch" type="xml">
				<form string="Info Knowledge">
					<header>
						<button name="action_done" string="Done"
							type="object" class="oe_highlight"
							states='draft'/>
						<button name="action_draft" string="Set to Draft"
							type="object"
							states='done'/>
					<field name='state' widget='statusbar'/>
					</header>
					<sheet>
				<group>
                    <div class="oe_title">	
<!--                         <h1> -->
<!--                             <field name="number" readonly='1'/> -->
<!--                         </h1> -->
	            	<field name="icon_image" widget="image" class="oe_left oe_avatar"/>
                       
                        <h1><field name="title" placeholder="Title"/></h1>
                    </div>
                </group>
<!--                     <div class="oe_title" attrs="{'invisible': [('number', '=', 'false')]}"> -->
<!--                         <label for="info_asset_name_seq"  class="oe_edit_only"/> -->
<!--                         <h1> -->
<!--                             <field name="number" readonly='1'/> -->
<!--                         </h1> -->
<!--                     </div> -->
						<group>
							<group>
<!-- 								<field name="title" required='1'/> -->
								<field name="valid_art" required='1' />
							</group>
<!-- 							<group> -->
<!-- 	            				<field name="icon_image" widget="image" class="oe_left oe_avatar"/> -->
<!-- 							</group> -->
<!-- 							<group> -->
<!-- 								<field name="owner" /> -->
<!-- 								<field name="manager"/> -->
<!-- 							</group> -->
							<group>
								<field name="publish_workflow" required='1' attrs="{'readonly': [('state','=','done')]}"/>
								<field name="retir_flow" required='1' attrs="{'readonly': [('state','=','done')]}"/>
							</group>
							<group>
								<field name="is_active"/>
								<field name="related_cmdb_ids" widget="many2many_tags"/>
								<field name="desc"/>   
							</group>
							<group>
								<field name="knowledge_ids" widget="many2many_tags" required='1'
								 attrs="{'readonly': [('state','=','done')]}"/>
								<field name="category_ids" widget="many2many_tags"/>
							</group>
							<group>
								<field name="q_a" />
							</group>
							<group>
								<field name="set_default" />
							</group>
							<group>
								<field name="read_group_ids"  widget="many2many_tags"/>
							</group>
							<group>
								<field name="contibute_groups_ids"  widget="many2many_tags"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_infoknowledge_base_tree">
			<field name="name">info.knowledge.base.tree</field>
			<field name="model">info.knowledge.base</field>
