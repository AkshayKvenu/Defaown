							type="object" class="oe_highlight"
							 states='retirement' attrs="{'invisible': ['|',('is_instant_retire','!=',False)]}"/>
						<button name="set_draft" string="Set to draft"
							type="object"
							attrs="{'invisible': [('state','=','draft')]}" />
						<field name="state"  widget='statusbar'/>
					</header>
					<sheet>
					<div class="oe_button_box" name="button_box">
							<button class="oe_stat_button" disabled="disabled" icon="fa-eye">
							<field name="flag2" readonly='1'/>Views
							</button>
							<button class="oe_stat_button" string="Add / Edit Review" 
								 name="%(action_view_rating_wizard)d" type="action" icon="fa-pencil">
							</button>
<!-- 							<button class="oe_stat_button" string="Edit Review"  -->
<!-- 								 name="%(action_view_rating_wizard)d" type="action" icon="fa-pencil"> -->
<!-- 							</button> -->
							<button class="oe_stat_button"
								name="open_rating" type="object" icon="fa-star">
								<field name="rating_count"/>Reviews
								
							</button>
					</div>
                    <div class="oe_title" attrs="{'invisible': [('number', '=', 'false')]}">
<!--                         <label for="info_asset_name_seq"  class="oe_edit_only"/> -->
                        <h1>
                            <field name="number" readonly='1'/>
                        </h1>
                    </div>
                        <div>
                            <field name="tags_ids" widget="many2many_tags" placeholder="Tags"/>
                        </div>
						<group>
							<group>
								<field name="category_ids" widget="many2many_tags" readonly='1' 
									attrs="{'invisible': [('category_ids', '=', False)]}"/>
								<field name="knowledge_base_id" readonly='1' attrs="{'invisible': [('knowledge_base_id', '=', False)]}"/>
								<field name="language_id"/>
								<field name="is_template"/>
								<field name="template_id" domain="[('is_template', '=', True),('id','!=',id)]" attrs="{'invisible': [('is_template', '!=', False)]}"/>
							</group>
							<group>
								<field name="published" required='1'/>
								<field name="valid_to" required='1' />
                                <field name="flag" invisible='1'/>
                                <field name="flag_form" invisible='1'/>
							</group>
							<group>
								<field name="short_desc"/>
								<field name="parent_id" domain="[('knowledge_base_id', '=', knowledge_base_id),('id','!=',id)]"/>
								<field name="is_like"  invisible='1'/>
								<field name="is_dislike"  invisible='1'/>
							</group>
							<group>
								<field name="link"/>
								<field name="workflow" readonly='1'/>
								<field name="article_text" invisible='1'/>
							</group>
							</group>
							<group>
<!-- 								<field name="article" /> -->
<!-- 								<field name="user_count_ids" readonly='1'> -->
<!-- 									<tree string="user_count_ids" editable='bottom'> -->
<!-- 										<field name="user_id" /> -->
<!-- 										<field name="count" /> -->
<!-- 										<field name="is_like"  invisible='1'/> -->
<!-- 										<field name="is_dislike" invisible='1' /> -->
<!-- 									</tree> -->
<!-- 								</field> -->
						</group>
                    	<notebook colspan="4">
                         <page string="Article body">
								<field name="article" required='1'/>
                         </page>
                         <page string="Statistics">
							<group class='col-6'>
                                <field name="flag2" readonly='1'/>
								<field name="user_count_ids" readonly='1'>
									<tree string="user_count_ids" editable='bottom'>
										<field name="user_id" />
										<field name="count" />
										<field name="is_like"  invisible='1'/>
										<field name="is_dislike" invisible='1' />
									</tree>
								</field>
							</group>
                         </page>
                        </notebook>
					</sheet>
				</form>
			</field>
		</record>

